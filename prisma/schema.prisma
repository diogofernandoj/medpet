// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(uuid())
  name         String
  email        String
  password     String
  transactions Transaction[]
  clients      Client[]

  @@map("users")
}

enum transactionTypes {
  EARNING
  EXPENSE
}

enum paymentMethodTypes {
  PIX
  CREDIT
  DEBIT
  BILL
  CASH
}

model Transaction {
  id        String             @id @default(uuid())
  user_id   String
  user      User               @relation(fields: [user_id], references: [id])
  title     String
  date      DateTime
  amount    Decimal            @db.Decimal(8, 2)
  type      transactionTypes
  status    Boolean
  notes     String
  payment   paymentMethodTypes
  client    Client?            @relation(fields: [client_id], references: [id])
  client_id String?
  pet_id    String?
  pet       Pet?               @relation(fields: [pet_id], references: [id])

  @@map("transactions")
}

model Client {
  id           String        @id @default(uuid())
  user_id      String
  user         User          @relation(fields: [user_id], references: [id])
  name         String
  document     String
  address      String
  phone        String
  notes        String
  transactions Transaction[]
  pets         Pet[]

  @@map("clients")
}

model Pet {
  id           String        @id @default(uuid())
  name         String
  birth        DateTime
  category     String
  client_id    String
  client       Client        @relation(fields: [client_id], references: [id])
  transactions Transaction[]

  @@map("pets")
}
